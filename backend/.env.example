NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/neuromatch

# JWT
JWT_SECRET=neuromatch_super_secret_key_change_in_production_2024
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# ─────────────────────────────────────────────────────────────
# ÖDEME SİSTEMİ
# PAYMENT_PROVIDER = 'none' | 'stripe' | 'iyzico'
# Şimdilik 'none' bırakın (ücretsiz dönem).
# Hazır olduğunuzda 'stripe' veya 'iyzico' yapın ve
# ilgili bölümdeki API anahtarlarını doldurun.
# ─────────────────────────────────────────────────────────────
PAYMENT_PROVIDER=none

# Stripe (PAYMENT_PROVIDER=stripe iken aktif)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET
STRIPE_PRICE_BASIC=price_XXXXXXXXXXXXXX
STRIPE_PRICE_PREMIUM=price_XXXXXXXXXXXXXX
STRIPE_PRICE_ENTERPRISE=price_XXXXXXXXXXXXXX

# iyzico (PAYMENT_PROVIDER=iyzico iken aktif)
# Test:    https://sandbox-api.iyzipay.com
# Canlı:   https://api.iyzipay.com
IYZICO_API_KEY=YOUR_IYZICO_API_KEY
IYZICO_SECRET_KEY=YOUR_IYZICO_SECRET_KEY
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@neuromatch.io
FROM_NAME=NEURO-MATCH

# Redis
REDIS_URL=redis://localhost:6379

# Frontend URL (iyzico callback için gerekli)
CLIENT_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Upload
MAX_FILE_UPLOAD=10000000
FILE_UPLOAD_PATH=./uploads
